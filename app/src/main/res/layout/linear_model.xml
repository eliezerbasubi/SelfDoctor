<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:id="@+id/cardLayout"
    card_view:cardBackgroundColor="@color/colorWhite"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    android:padding="10dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/disease_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/doctor"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/disease_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breast Cancer"
            android:layout_below="@id/disease_img"
            android:layout_centerHorizontal="true"
            android:textSize="19dp"/>

        <TextView
            android:id="@+id/disease_syptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Possible syptoms : fever,fatigue,nausea"
            android:textSize="16dp"
            android:layout_below="@id/disease_name"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:padding="10dp"
            android:maxLength="80"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>